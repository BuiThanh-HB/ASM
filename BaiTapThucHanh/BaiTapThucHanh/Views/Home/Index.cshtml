@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BaiTapThucHanh.Models
@model List<Product>

<div class="row">
    @{
        foreach (var dt in (List<Product>)Model)
        {
            <div class="col-4 text-center">
                <div class="row">
                    <div class="col-md-4">@dt.name</div>
                    <div class="col-md-4">@dt.price</div>
                    <div class="col-md-4">
                        <img src="@dt.image" class="rounded" alt="Cinque Terre">
                    </div>
                </div>
            </div>
        }
    }

</div>